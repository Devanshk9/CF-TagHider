{
  "manifest_version": 3,
  "name": "TagHider",
  "version": "1.0",
  "description": "Hide Tags in CF Problems during practice",
  "action": { "default_popup": "popup.html" },
  "host_permissions": ["*://*.codeforces.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.codeforces.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
